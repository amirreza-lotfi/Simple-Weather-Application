<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_watchlist_city_item"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/watchlist_city_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_two_clouds_night" />

    <TextView
        android:id="@+id/watchlist_city_item_city_name"
        android:layout_width="168dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:scrollbars="horizontal"
        android:singleLine="true"
        android:textColor="#D3FFFFFF"
        android:textSize="19dp"

        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/watchlist_city_item_image"
        app:layout_constraintTop_toTopOf="@+id/watchlist_city_item_image"
        tools:text="Ardebil" />

    <TextView
        android:id="@+id/watchlist_city_item_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:textSize="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/watchlist_city_item_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21 â„ƒ" />

    <TextView
        android:id="@+id/watchlist_city_item_description"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/watchlist_city_item_image"
        app:layout_constraintTop_toBottomOf="@+id/watchlist_city_item_city_name"
        tools:text="thunderstorm to the fuck thunderstorm" />

</androidx.constraintlayout.widget.ConstraintLayout>